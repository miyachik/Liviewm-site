 {
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-css-modules",
    "stylelint-scss"
  ],
  rules: {
    "at-rule-no-unknown": [
      true,
      {
        ignoreAtRules: [
          "include", "value", "mixin", "content", "extend", "if", "else"
        ]
      }
    ],
    "declaration-property-unit-whitelist": {
      "font-size": ["px", "em"]
    },
    "property-no-unknown": [
      true,
      {
        ignoreProperties: ["font-icon"]
      }
    ]
  }
}
